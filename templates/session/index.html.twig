{% extends 'base.html.twig' %}

{% block title %}Hello SessionController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! âœ…</h1>
    <div id="authenticated_user">
      {% if(app.user and is_granted('ROLE_ADMIN')) %}
      <h5>Administrator: You are authenticated as {{app.user.email}}</h5>
      {% elseif (app.user and is_granted('IS_AUTHENTICATED_FULLY')) %}
      <h5>You are authenticated as {{app.user.email}}</h5>
    {% else %}
     <h5>You are authenticated as Anonymous</h5>
    {% endif %}
</div>
    <h3>Your are visited my site for {{app.session.get('nbVisite')}} </h3>
</div>
{% endblock %}
