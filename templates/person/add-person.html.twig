{% extends 'base.html.twig' %}

{% block title %}Hello PersonController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
<div id="authenticated_user">
{% if(app.user and is_granted('ROLE_ADMIN')) %}
<h5>You are authenticated as {{app.user.email}}</h5>
{% else %}
<h5>You are authenticated as Anonymous</h5>
{% endif %}
</div>
{# read and display all flash messages #}
{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-success" role="alert">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}
    <h1>Add Person Form âœ…</h1>
    <div id="person-form">
    {{ form_start(form, {attr: {'noValidate': 'noValidate'}}) }}
    <div class="row">
        <span class="col">{{ form_row(form.firstname)}}</span>
        <span class="col">{{ form_row(form.name)}}</span>
    </div>
    {{form_rest(form)}}
    </div>


</div>

{% endblock %}

